<Application x:Class="Localization.Samples.AppWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Localization.Samples.AppWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="Width" Value="250px"></Setter>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="DodgerBlue"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="Width" Value="250px"></Setter>
            <Setter Property="Height" Value="30px"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="Width" Value="250px"></Setter>
            <Setter Property="Background" Value="White"></Setter>
        </Style>
    </Application.Resources>
</Application>
